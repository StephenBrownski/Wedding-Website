!!!
%html
  %head
    %title
      = @page_title || 'WeddingInviteApp'
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,600,700|Roboto+Slab:400,300,100,700'
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body

    - if notice.present?
      %p.alert.alert-success
        = notice
    - if alert.present?
      %p.alert.alert-danger
        = alert
    - if flash[:success].present?
      %p.alert.alert-success
        = flash[:success]
        
    - if flash[:error].present?
      %p.alert.alert-danger
        = flash[:error]

    = render "shared/main_menu"

    = yield